extends layout

block content
  h1= title
  
  - let items = results;
  div(class="container-fluid")
    div(class="row m-1")
      each item, index in results
        - let destination = `/ornaments/update?id=${item._id}`
        div(class="row-sm-2", class="m-1") Item #{item.material} (#{item.style}) is $#{item.price}
        button.btn.btn-primary.ml-1(onclick=`dispatch("${destination}")`) Update

  script.
    function dispatch(path){
      window.location.href=path
    }